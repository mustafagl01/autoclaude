# ============================================================================
# UK Takeaway Phone Order Assistant Dashboard - Environment Variables
# ============================================================================
# Copy this file to .env.local and fill in the actual values for development
# DO NOT commit .env.local to version control

# ----------------------------------------------------------------------------
# NextAuth Configuration
# ----------------------------------------------------------------------------
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="generate-with-openssl-rand-base64-32"

# URL of the Next.js application (update for production)
NEXTAUTH_URL="http://localhost:3000"

# ----------------------------------------------------------------------------
# Google OAuth
# ----------------------------------------------------------------------------
# Get credentials from: https://console.cloud.google.com/
# Create OAuth 2.0 Client ID for Web application
# Add http://localhost:3000/api/auth/callback/google to authorized redirect URIs
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# ----------------------------------------------------------------------------
# Apple Sign-In
# ----------------------------------------------------------------------------
# Get credentials from: https://developer.apple.com/
# Create App ID with Sign In with Apple capability
# Create a private key in the Certificates, Identifiers & Profiles section
APPLE_ID="your-apple-services-id"
APPLE_TEAM_ID="your-apple-team-id"
APPLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"
APPLE_KEY_ID="your-apple-key-id"

# ----------------------------------------------------------------------------
# Retell AI Integration
# ----------------------------------------------------------------------------
# Get API key from: https://www.retellai.com/dashboard
RETELL_API_KEY="your-retell-api-key"

# ----------------------------------------------------------------------------
# n8n MCP Server
# ----------------------------------------------------------------------------
# MCP server endpoint for accessing n8n workflows
MCP_SERVER_ENDPOINT="https://nt3ys1ml.rpcd.host/mcp-server/http"
MCP_AUTH_TOKEN="your-mcp-auth-token"

# ----------------------------------------------------------------------------
# Cloudflare Configuration
# ----------------------------------------------------------------------------
# Get from: https://dash.cloudflare.com/
# Used for D1 database deployment and Cloudflare Pages
CLOUDFLARE_ACCOUNT_ID="your-account-id"
CLOUDFLARE_API_TOKEN="your-api-token"

# ----------------------------------------------------------------------------
# Database (Cloudflare D1)
# ----------------------------------------------------------------------------
# Database name configured in wrangler.toml
# Run: wrangler d1 create takeaway-dashboard
# Then update the database_id in wrangler.toml
D1_DATABASE_NAME="takeaway-dashboard"

# ----------------------------------------------------------------------------
# Application Settings
# ----------------------------------------------------------------------------
# Node environment (development, production, test)
NODE_ENV="development"

# Log level (error, warn, info, debug)
LOG_LEVEL="info"
